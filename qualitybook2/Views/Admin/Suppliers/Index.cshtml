@model IEnumerable<qualitybook2.Models.Supplier>

@{
    ViewData["Title"] = "AdminSuppliersIndex";
}


<div class="container">
    <div class="row row-middle">
        <h2>AdminSuppliersIndex</h2>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SupplierName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumberHome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumberWork)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumberMobile)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupplierName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumberHome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumberWork)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumberMobile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SupplierId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.SupplierId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.SupplierId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
</div>