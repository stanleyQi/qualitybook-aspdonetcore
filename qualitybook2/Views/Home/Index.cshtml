@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row">
        <div class="col-md-12"><label><h2>Best seller<h2></label></div>
    </div>
    <div class="row">
        @{
            foreach (var book in Model.PreferredBooks)
            {
                if (book.PreferredFlag == 1)
                {
                    <div class="col-md-3">
                        <div class="thumbnail">
                            <img src="~/images/@book.ImageUrl" alt="..." class=".img-thumbnail">
                            <div class="caption">
                                <h3>@book.BookName</h3>
                                <p>@book.ShortDescription</p>
                                <p class="home-p-price">
                                    <div class="home-div-btn">
                                        <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-bookId="@book.BookId" class="btn btn-primary home-btn-addtocart" role="button">Add to cart</a>
                                    </div>
                                    <div class="home-div-price"><span class="home-price">@book.Price.ToString("c")</span></div>
                                </p>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                }
            }
        }

    </div>

    <div class="row">
        <div class="col-md-12"><label><h2>Promotion<h2></label></div>
    </div>
    <div class="row">
        @{
            foreach (var book in Model.PreferredBooks)
            {
                if (book.PreferredFlag == 2)
                {
                    <div class="col-md-3">
                        <div class="thumbnail">
                            <img src="~/images/@book.ImageUrl" alt="..." class=".img-thumbnail">
                            <div class="caption">
                                <h3>@book.BookName</h3>
                                <p>@book.ShortDescription</p>
                                <p class="home-p-price">
                                    <div class="home-div-btn">
                                        <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-bookId="@book.BookId" class="btn btn-primary home-btn-addtocart" role="button">Add to cart</a>
                                    </div>
                                    <div class="home-div-price"><span class="home-price">@book.Price.ToString("c")</span></div>
                                </p>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>

    <div class="row">
        <div class="col-md-12"><label><h2>New books<h2></label></div>
    </div>
    <div class="row">
        @{
            foreach (var book in Model.PreferredBooks)
            {
                if (book.PreferredFlag == 3)
                {
                    <div class="col-md-3">
                        <div class="thumbnail">
                            <img src="~/images/@book.ImageUrl" alt="..." class=".img-thumbnail">
                            <div class="caption">
                                <h3>@book.BookName</h3>
                                <p>@book.ShortDescription</p>
                                <p class="home-p-price">
                                    <div class="home-div-btn">
                                        <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-bookId="@book.BookId" class="btn btn-primary home-btn-addtocart" role="button">Add to cart</a>
                                    </div>
                                    <div class="home-div-price"><span class="home-price">@book.Price.ToString("c")</span></div>
                                </p>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
</div>
