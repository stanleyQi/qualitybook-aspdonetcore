@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-dark">
    <form method="post" asp-controller="Account" asp-action="Login" role="form">
        <h2 class="sr-only login-head">Login</h2>
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="illustration"><i class="icon ion-ios-locked-outline" style="color: rgb(86,198,198);"></i></div>
        <div asp-validation-summary="All" style="color:red;"></div>
        <div class="form-group">
            <input asp-for="UserName" class="form-control" name="UserName" placeholder="User Name">
            @*<span asp-validation-for="UserName" class="text-danger"></span>*@
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" type="password" name="Password" placeholder="Password">
            @*<span asp-validation-for="Password" class="text-danger"></span>*@
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit" style="background-color: rgb(86,198,198);">Log In</button>
        </div>
    </form>
</div>